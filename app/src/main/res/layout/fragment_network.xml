<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_surface"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/network_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_network"
        android:textColor="@color/color_on_background"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/node_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/node_stopped"
        android:textColor="@color/color_on_surface"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="start"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_start_node"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/color_primary"
            android:text="@string/start_node"
            android:textAllCaps="false"
            android:textColor="@color/color_on_primary" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_stop_node"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/color_secondary"
            android:text="@string/stop_node"
            android:textAllCaps="false"
            android:textColor="@color/color_on_secondary" />
    </LinearLayout>

</LinearLayout>
