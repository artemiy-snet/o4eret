<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="o4eret"
        android:textColor="@color/color_on_background"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Offline LoRa AI gateway"
        android:textColor="@color/color_on_surface"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/node_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Node: STOPPED"
        android:textColor="@color/color_on_surface"
        android:textSize="14sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_node_button"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="Start node"
        android:textAllCaps="false"
        android:textColor="@color/color_on_primary"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/color_primary" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/stop_node_button"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:enabled="false"
        android:text="Stop"
        android:textAllCaps="false"
        android:textColor="@color/color_on_secondary"
        app:cornerRadius="10dp"
        app:backgroundTint="@color/color_secondary" />

</LinearLayout>
